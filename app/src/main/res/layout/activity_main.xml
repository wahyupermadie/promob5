<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#5C9FCA"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:layout_height="match_parent"
    tools:context="id.futnet.praktikumprogmobm5.MainActivity">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"/>
    <Button
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:id="@+id/Button_tambah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Member"
        android:onClick="tambahMember"/>
    <Button
        android:layout_margin="10dp"
        android:background="@drawable/button2"
        android:id="@+id/Button_lihat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lihat Member"
        android:onClick="getMember"/>
</LinearLayout>
